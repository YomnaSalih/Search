
@{
    ViewBag.Title = "Search";
    Layout = null;
    
}

<html>

<head>

    <style>
        * {
            font-family: Roboto, sans-serif;
            padding: 0;
            margin: 0;
        }

        html, body {
            width: 100%;
            height: 100%;
        }

        .flexbox {
            background: linear-gradient(155deg, #55c7ed, #2bb3e0, #3bc1ed);
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }


            h2 {
                color: black;             
                text-shadow: 0 1px #0091c2;
                justify-content: center;
                align-items: center;
            }
        

    </style>
</head>

<body>

    <h2>Found URLs</h2>
    <div class="flexbox">

        <ul>
            @foreach (var url in ViewData["url"] as List<string>)
            {

                <li> <a href="@url">@url</a></li>
            }

        </ul>
    </div>

</body>
</html>

    

